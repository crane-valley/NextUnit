<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>NextUnit.Core</AssemblyName>
    <RootNamespace>NextUnit</RootNamespace>

    <!-- Explicitly mark as library, not executable -->
    <OutputType>Library</OutputType>

    <!-- Package Information -->
    <PackageId>NextUnit.Core</PackageId>
    <Description>NextUnit is a modern, high-performance test framework for .NET 10+ that combines TUnit's architecture with xUnit's familiar assertions. This package contains the core attributes, assertions, and execution engine.</Description>
    <PackageTags>$(PackageTags);assertions;aot;native-aot;source-generator</PackageTags>

    <!-- NuGet Package Settings -->
    <DevelopmentDependency>true</DevelopmentDependency>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- Prevent test discovery and execution of this library -->
    <IsTestProject>false</IsTestProject>
    <IsTestingPlatformApplication>false</IsTestingPlatformApplication>
    <GenerateProgramFile>false</GenerateProgramFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
